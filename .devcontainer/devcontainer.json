{
	"name": "${localWorkspaceFolderBasename}",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspace",
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
				"installZsh": "true",
				"username": "vscode",
				"userUid": "1000",
				"userGid": "1000",
				"upgradePackages": "true"
		}
},
	"customizations": {
			"vscode": {
					"extensions": [
							"rebornix.Ruby",
							"ms-azuretools.vscode-docker",
							"github.copilot",
							"github.copilot-chat",
							"github.copilot-labs"
					]
			}
	},
	"forwardPorts": [],
	"remoteUser": "vscode"
}